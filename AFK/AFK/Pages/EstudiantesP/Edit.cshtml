    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Estudiante</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Estudiante.ID" />
            <div class="form-group">
                <label asp-for="Estudiante.Nombre" class="control-label"></label>
                <input asp-for="Estudiante.Nombre" class="form-control" />
                <span asp-validation-for="Estudiante.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estudiante.Sexo" class="control-label"></label>
                <input asp-for="Estudiante.Sexo" class="form-control" />
                <span asp-validation-for="Estudiante.Sexo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estudiante.Edad" class="control-label"></label>
                <input asp-for="Estudiante.Edad" class="form-control" />
                <span asp-validation-for="Estudiante.Edad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estudiante.IDAsignatura" class="control-label"></label>
                <select asp-for="Estudiante.IDAsignatura" class="form-control" asp-items="ViewBag.IDAsignatura"></select>
                <span asp-validation-for="Estudiante.IDAsignatura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
